@model IEnumerable<MvcStudent.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <button type="button" class="btn btn-success m-1">
        <a class="text-white text-decoration-none" asp-action="Create">Create New</a>
    </button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filiere_id)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Filiere_id.FiliereId)
            </td>
            <td>
                <div class="d-flex justify-content-center">
                    <div>
                        <button type="button" class="btn btn-warning m-1">
                            <a class="text-white text-decoration-none" asp-action="Edit" asp-route-id="@item.StudentId">Edit</a>
                        </button>
                    </div>
                    <div>
                        <button type="button" class="btn btn-info m-1">
                            <a class="text-white text-decoration-none" asp-action="Details" asp-route-id="@item.StudentId">Details</a>
                        </button>
                    </div>
                    <div>
                        <button type="button" class="btn btn-danger m-1">
                            <a class="text-white text-decoration-none" asp-action="Delete" asp-route-id="@item.StudentId">Delete</a>
                        </button>
                    </div>
                    <div>
                        <button type="button" class="btn btn-info m-1">
                            <a class="text-white text-decoration-none" asp-action="Note" asp-route-id="@item.StudentId">Display Mark</a>
                        </button>
                    </div>
                </div>  
            </td>
        </tr>
}
    </tbody>
</table>
